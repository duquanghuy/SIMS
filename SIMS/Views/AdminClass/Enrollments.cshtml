@model SIMS.Models.ViewModels.EnrollmentViewModel

@{
    ViewData["Title"] = "Manage Students for " + Model.ClassDisplay;
}

<h2>@ViewData["Title"]</h2>

<!-- 1) List currently enrolled students -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Enrolled On</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model.Enrolled)
        {
            <tr>
                <td>@e.Student.FirstName @e.Student.LastName</td>
                <td>@e.EnrolledOn.ToShortDateString()</td>
                <td>
                    <form asp-action="Unenroll" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="enrollmentId" value="@e.EnrollmentId" />
                        <input type="hidden" name="classId" value="@Model.ClassId" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<!-- 2) Enroll a new student -->
<form asp-action="Enroll" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="classId" value="@Model.ClassId" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Select one or more students to enroll:</label>
        <div>
            @* Loop over the SelectList items and render checkboxes *@
            @foreach (var item in Model.Available as IEnumerable<SelectListItem>)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SelectedStudentIds"
                           value="@item.Value"
                           id="chk_@item.Value" />
                    <label class="form-check-label" for="chk_@item.Value">
                        @item.Text
                    </label>
                </div>
            }
        </div>
        <span asp-validation-for="SelectedStudentIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Enroll Selected</button>
</form>
