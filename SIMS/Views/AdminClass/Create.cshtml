@model SIMS.Models.ViewModels.ClassViewModel
@{
    ViewData["Title"] = "Add New Class";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="AdminClass" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <select asp-for="SubjectId" asp-items="Model.Subjects" class="form-control">
            <option value="">-- Select Subject --</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeacherId"></label>
        <select asp-for="TeacherId" asp-items="Model.Teachers" class="form-control">
            <option value="">-- Select Teacher --</option>
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
