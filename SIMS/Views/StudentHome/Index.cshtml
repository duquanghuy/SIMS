@model SIMS.Models.ViewModels.StudentHomeViewModel

@{
    ViewData["Title"] = "Student Home";
}

<h2>@ViewData["Title"]</h2>

<h4>Today's Classes</h4>
@if (Model.TodaysClasses.Any())
{
    <ul>
        @foreach (var cls in Model.TodaysClasses.OrderBy(c => c.TimeSlot))
        {
            <li><strong>@cls.ClassName</strong> (@cls.TimeSlot)</li>
        }
    </ul>
}
else
{
    <div class="alert alert-info">You have no classes scheduled for today.</div>
}

<h4>All My Classes</h4>
@if (Model.AllClasses.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Class</th>
                <th>Teacher</th>
                <th>Teacher Email</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.AllClasses)
            {
                <tr>
                    <td>@row.ClassName</td>
                    <td>@row.TeacherName</td>
                    <td>@row.TeacherEmail</td>
                    <td>@row.Score</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        <strong>GPA:</strong> @Model.GPA.ToString("F2")
    </div>
}
else
{
    <div class="alert alert-info">You are not enrolled in any classes.</div>
}
