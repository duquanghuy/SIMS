<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIMS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <script src="~/js/loading.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/side-bar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/breadcrumb.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loading.css" asp-append-version="true" />
    <script src="~/js/side-bar.js" defer></script>

</head>
<body>
    <!-- HEADER NAVBAR -->
    @await Component.InvokeAsync("Navbar")

    <div class="container-fluid" style="">
        <div class="row">
            <!-- LEFT SIDEBAR -->
            @await Component.InvokeAsync("Sidebar")

            <!-- MAIN CONTENT -->
            <main role="main"
                  class="col"
                  id="mainContent">
                @await Component.InvokeAsync("Breadcrumb")
                <div class="main-container p-3 mb-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/8cd6ef2ff8.js"
            crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
