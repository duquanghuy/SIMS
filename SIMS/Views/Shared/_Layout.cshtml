<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIMS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
          crossorigin="anonymous" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/side-bar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIMS.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <button class="navbar-toggler"
                        type="button"
                        aria-label="Toggle sidebar"
                        id="sidebarToggle">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    SIMS
                </a>             
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- LEFT SIDEBAR -->
            <aside class="sidebar d-flex flex-column align-items-center"
                   id="sidebarContent">
                <nav class="nav flex-column">
                    <a class="nav-link text-dark ps-0 pe-0 text-center"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i>
                        <span class="link-text">Home</span>
                    </a>
                    <a class="nav-link text-dark ps-0 pe-0 text-center"
                       asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="fa-solid fa-book"></i>
                        <span class="link-text">Privacy</span>
                    </a>
                    <a class="nav-link text-dark ps-0 pe-0 text-center"
                       asp-area="" asp-controller="Home" asp-action="Wiki">
                        <i class="fa-brands fa-wikipedia-w"></i>
                        <span class="link-text">Wiki</span>
                    </a>
                </nav>
            </aside>

            <!-- MAIN CONTENT -->
            <main role="main"
                  class="col"
                  style="transition: margin-left 0.2s ease;"
                  id="mainContent">
                <div class="main-container m-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SIMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">
                Privacy
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/8cd6ef2ff8.js"
            crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/side-bar.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
